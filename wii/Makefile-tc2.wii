TARGET      := prog
BUILD       := build
SOURCES     := .
DATA        :=
INCLUDES    := .

# devkitPPC environment
PREFIX      := powerpc-eabi
CC          := $(PREFIX)-gcc
CFLAGS      := -O2 -g -Wall -Wextra

# Default rule
all: $(TARGET).elf

$(TARGET).elf: main.o
	$(CC) $(CFLAGS) -o $@ $^

main.o: main.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f *.o *.elf
